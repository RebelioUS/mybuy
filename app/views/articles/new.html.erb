<h1>Articles#new</h1>
<%= link_to "Back to all articles", articles_path %>
<% # Мы проверяем, имеются ли какие-либо ошибки с помощью @article.errors.any?
   if @article.errors.any? %>
  <div id="error_explanation">
    <% # pluralize это хелпер rails, принимающий число и строку как аргументы.
       # Если число больше одного, строка будет автоматически склонено во множественном числе %>
    <h5 class="text-danger"><%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:</h5>
    <ul style="list-style: upper-roman">
      <% @article.errors.full_messages.each do |msg| %>
        <li class="text-danger"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-9">
    <h6 class="foo">Article form</h6>

    <!-- Contact form -->
    <div class="add-comment styled boxed boxed-cream" id="addcomments">
      <div class="add-comment-title gradient"><h3>Write a article</h3></div>
      <div class="comment-form">
        <%= form_for @article, {:id => 'commentForm', :class => 'ajax_form'} do |f| %>
          <div class="form-inner">
            <div class="field_text">
              <%= f.label :title, :class => 'lable_title', :for => 'title' %>
              <%= f.text_field :title, :id => 'title', :class => 'inputtext input_middle required', :for => 'title' %>
            </div>
            <div class="clear"></div>
            <div class="field_text field_textarea">
              <div id="edit_buttons" class="edit_buttons gradient"></div>
              <%= f.label :content, :class => 'lable_title', :for => 'content' %>
              <%= f.text_area :content, :cols => 30, :rows => 10, :id => 'styled_message', :class => 'textarea textarea_middle', :for => 'content'%>
            </div>
            <div class="clear"></div>
          </div>

          <div class="rowSubmit">

            <span class="btn btn-hover"><%= f.submit 'Send' %></span>
          </div>
        <% end %>
      </div>
    </div>
    <!--/ Contact form -->
  </div>
</div>